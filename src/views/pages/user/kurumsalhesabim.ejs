                  <label class="form-label">Yeni Şifre</label>
                  <input class="form-control" name="yenisifre" type="password" placeholder="••••••">
                </div>

                <div class="form-group">
                  <label class="form-label">Şifreyi Onayla</label>
                  <input class="form-control" name="yenisifreonay" type="password" placeholder="••••••">
                </div>

              </div>
