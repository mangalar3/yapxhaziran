<title>Yapx | Giriş</title>
<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				
				<div class="login100-pic js-tilt p-t-50" data-tilt>
					<img src="/general/img/yapxlogom-min.jpg" alt="IMG">
				</div>
				
				
				<form action="/giris" method="post" class="login100-form validate-form">
					
					<span class="login100-form-title">
						<span id="baslikgiris">Yapx Bireysel</span> 
						<div class="text-center p-t-12 mt-4">
							<a id="bireysel" class="txt2 option" href="/giris?selected=1" style="font-size: 14px;" >
								Bireysel
							</a>
							<a id="kurumsal" class="txt2 option" href="/giris?selected=2" style="font-size: 14px;">
								Yapı Market
							</a>
							<a id="meslek" class="txt2 option" href="/giris?selected=3" style="font-size: 14px;">
								Meslek
							</a>
						</div>
					</span>
					
					
						
					
					
					<% if (tUserlogin_error != undefined) { %>
						<%- include('../../partials/_mesaj') %> 
					 <% } %>
					<div class="wrap-input100 validate-input" data-validate = "Geçerli Mail Adresi: ex@abc.xyz">
						<input class="input100" type="text" name="email" placeholder="Email">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Şifre gerekiyor!">
						<input class="input100" type="password" id="sifre" name="sifre" placeholder="Şifre">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>
					
					<div class="container-login100-form-btn">
						<button type="submit" class="login100-form-btn" onclick="document.getElementById('myP').style.visibility = 'visible'" style="color: black;">
							Giriş Yap
						</button>
					</div>
					
					<div class="text-center p-t-12">
						<span class="txt1">
							Yoksa?
						</span>
						<a class="txt2" href="/sifremiunuttum">
							Şifrenizi mi unuttunuz?
						</a>
					</div>
				</form>
				<div class="login100-form validate-form">
					
				</div>
				<div class="login100-form validate-form">
					
					<a id="bireyselKayitLink" href="/kayitol">
					<div class="container-login100-form-btn p-t-10">
						<button  class="login100-form-btn" style="color: white; background-color: #41644A;">
							Bireysel Kayıt
						</button>
					</div>
					</a>
					<div class="text-center p-t-12 p-b-50">
						<a class="txt2" href="/anasayfa">
							Ana sayfaya geri dön
							<i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
						</a>
					</div>

				</div>
					
				
			</div>
		</div>
	</div>
	
	

	
<!--===============================================================================================-->	
	<script src="/general/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="/general/vendor/bootstrap/js/popper.js"></script>
	<script src="/general/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="/general/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="/general/vendor/tilt/tilt.jquery.min.js"></script>
	<script >
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
<!--===============================================================================================-->
	<script src="/general/js/main.js"></script>

</body>
</html>
<style>
	 .option {
        color: black;
		font-size: 18px;
        margin-right: 20px;
        text-decoration: none;
        border-bottom: 2px solid transparent;
        transition: border-bottom-color 0.2s ease-in-out;
    }

    .option:hover {
        color: #ffcc00 !important;
        border-bottom-color: #ffcc00 !important;
    }
	.selected {
        color: #ffcc00 !important;
        border-bottom-color: #ffcc00 !important;
    }
</style>

<script>
    window.onload = function() {
        var queryString = window.location.search;
        var urlParams = new URLSearchParams(queryString);
        var selected = urlParams.get('selected');

		var bireyselKayitLink = document.getElementById("bireyselKayitLink");
        var bireyselKayitButton = bireyselKayitLink.querySelector("button");
		
		var baslik = document.getElementById("baslikgiris");

        
        if (selected === "1") {
            // İstenilen işlemi yap: örneğin düğmeyi seçili hale getir
            var button = document.getElementById("bireysel");
            button.classList.add("selected");
			bireyselKayitLink.href = "/kayitol";
            bireyselKayitButton.textContent = "Bireysel Kayıt";
        }
        else if(selected === "2"){
            var button = document.getElementById("kurumsal");
            button.classList.add("selected");
			bireyselKayitLink.href = "/kurumsalhesap";
            bireyselKayitButton.textContent = "Yapı Market Kayıt";
			
            baslik.textContent = "Yapx Yapı Market ";
        }
        else{
            var button = document.getElementById("meslek");
            button.classList.add("selected");
			bireyselKayitLink.href = "/meslekkayitol";
            bireyselKayitButton.textContent = "Meslek Kayıt";
			
            baslik.textContent = "Yapx Meslek ";
        }
    }
</script>
