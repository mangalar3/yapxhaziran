<script>
  $(document).ready(function() {
    // Sayfa numarasını al
    var sayfaNumarasi = getUrlParameter('pg') || 1;
  
    // Sayfa numarasını güncelleyen bir fonksiyon
    function sayfaDegistir(yeniSayfaNumarasi) {
      // Geçerli URL'yi al
      var url = window.location.href;
  
      // URL'deki mevcut parametreleri ayrıştır
      var urlParams = new URLSearchParams(window.location.search);
  
      // pg parametresini güncelle veya ekle
      urlParams.set('pg', yeniSayfaNumarasi);
  
      // Yeni parametreleri URL'ye ekle
      var yeniURL = window.location.origin + window.location.pathname + '?' + urlParams.toString();
  
      // Sayfayı yeniden yönlendir
      window.location.href = yeniURL;
    }
  
    // İleri düğmesine tıklama olayı
    $('#ileriDugmesi').on('click', function() {
      sayfaNumarasi++;
      sayfaDegistir(sayfaNumarasi);
    });
  
    // Geri düğmesine tıklama olayı
    $('#geriDugmesi').on('click', function() {
      if (sayfaNumarasi > 1) {
        sayfaNumarasi--;
        sayfaDegistir(sayfaNumarasi);
      }
    });
    
    // Sayfa numarasını göster
    $('#sayfaNumarasi').text('Sayfa ' + sayfaNumarasi);
    
    // URL'den parametre değerini almak için yardımcı bir fonksiyon
    function getUrlParameter(name) {
      name = name.replace(/[[]/, '\\[').replace(/[\]]/, '\\]');
      var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
      var results = regex.exec(window.location.search);
      return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
    }
  });
  
  
  </script>